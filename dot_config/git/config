[alias]
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cn %Cred%d %Creset%s'
    gr = graph
    b = branch
    br = branch
    s = status
    a = add
    ad = add
    cm = commit
    sw = switch
    # staged diff
    ds = diff --cached
    cp = cherry-pick
    st = stash push -m
    sta = stash apply
    stp = stash pop
    stl = stash list
    ft = fetch
    ftp = fetch -p
    ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
    w = worktree
	wswitch = "!f() { \
		target=$1; \
		path=$(git worktree list --porcelain | awk '/^branch/ {b=$2} /^worktree/ {p=$2; if (b==\"refs/heads/'$target'\") print p}'); \
		if [ -n \"$path\" ] && [ -d \"$path\" ]; then \
			echo \"Worktree for branch '$target' found at $path\"; \
			cd \"$path\"; \
		else \
			git switch \"$target\"; \
		fi; \
	}; f"
